{
  "name": "memoria",
  "version": "1.1.0",
  "private": true,
  "type": "module",
  "bin": {
    "memoria": "./cli"
  },
  "scripts": {
    "memoria": "tsx src/cli.ts",
    "check": "tsc --noEmit",
    "build": "esbuild src/cli.ts --bundle --platform=node --format=esm --target=node18 --external:better-sqlite3 --banner:js=\"import { createRequire } from 'node:module';const require = createRequire(import.meta.url);\" --outfile=dist/cli.mjs",
    "memoria:dist": "node dist/cli.mjs"
  },
  "dependencies": {
    "better-sqlite3": "^11.8.1",
    "commander": "^14.0.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.3.0",
    "esbuild": "^0.25.10",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild"
    ]
  }
}
